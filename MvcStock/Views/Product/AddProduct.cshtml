@model MvcStock.Models.Entity.TblProduct
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Product Name</label>
        <input type="text" class="form-control" name="ProductName" required="" placeholder="Please enter product name hear..." maxlength="50"/>
    </div>
    <div>
        <label>Product Brand</label>
        <input type="text" class="form-control" name="ProductBrand" required="" placeholder="Please enter product brand hear..." maxlength="50"/>
    </div>
    <div>
        <label>Choose Product Category</label>
        @Html.DropDownListFor(m=>m.TblCategory.Categoryid,(List<SelectListItem>)ViewBag.vlu, new {@class="form-control"})
    </div>
    <div>
        <label>Product Price</label>
        <input type="text" class="form-control" name="ProductPrice" required="" />
    </div>
    <div>
        <label>Product Stock</label>
        <input type="text" class="form-control" name="ProductStock" required="" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Add New Product</button>
    </div>
</form>

